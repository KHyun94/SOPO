<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="com.delivery.sopo.viewmodels.registesrs.RegisterViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25sp"
            android:text="운송장 등록"
            android:textColor="@color/MAIN_BLACK"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.9" />


        <com.delivery.sopo.util.ui_util.CustomEditText
            android:id="@+id/custom_et_track_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25sp"
            android:layout_marginTop="25sp"
            app:hint="운송장 번호를 입력해주세요."
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:title="운송장 번호" />

        <LinearLayout
            android:id="@+id/custom_et_delivery_co"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="80sp"
            android:orientation="vertical"
            android:layout_marginHorizontal="25sp"
            android:paddingVertical="10sp"
            app:layout_constraintTop_toBottomOf="@id/custom_et_track_num">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10sp"
                android:layout_marginBottom="10sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5sp"
                    android:paddingBottom="5sp"
                    android:text="택배사"
                    android:textColor="@color/MAIN_BLACK"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="parent" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10sp"
                android:clickable="true"
                android:onClick="@{()->vm.onMoveClicked()}">

                <TextView
                    android:id="@+id/et_input_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:lines="1"
                    android:singleLine="true"
                    android:textSize="20sp"
                    android:textColorHint="@color/COLOR_GRAY_300"
                    android:hint="클릭하여 배송사를 선택해주세요."/>

                <View
                    android:id="@+id/v_underline"
                    android:layout_width="match_parent"
                    android:layout_height="2sp"
                    android:layout_below="@+id/et_input_text"
                    android:background="@color/COLOR_GRAY_200" />
            </RelativeLayout>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
