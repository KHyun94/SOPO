<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/COLOR_GRAY_50">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_sub_title"
        android:text="소포 앱이 일할 수 있도록\n허용 버튼을 눌러주세요."
        android:gravity="center"
        android:textSize="23.66dp"
        android:textColor="@color/COLOR_GRAY_900"
        android:fontFamily="@font/spoqa_han_sans_neo_bold"
        android:layout_marginBottom="16dp"
        />

    <TextView
        android:id="@+id/tv_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/iv_icon_logo"
        android:text="알림 내역 중 택배사와 송장번호가 있다면\n대신 등록해드릴게요."
        android:gravity="center"
        android:textSize="16dp"
        android:textColor="@color/COLOR_GRAY_500"
        android:fontFamily="@font/spoqa_han_sans_neo_regular"
        android:layout_marginBottom="91dp"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/iv_icon_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_setting_now"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:layout_marginBottom="130dp"
        app:lottie_rawRes="@raw/lottie_intro_step3"
        tools:background="@raw/lottie_intro_step3"/>

    <TextView
        android:id="@+id/tv_setting_now"
        style="@style/buttonBasicStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_setting_later"
        android:text="지금 설정할게요" />

    <TextView
        style="@style/buttonTranStyle"
        android:id="@+id/tv_setting_later"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
        android:layout_marginEnd="41dp"
        android:text="나중에 할게요"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/COLOR_MAIN_700"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>