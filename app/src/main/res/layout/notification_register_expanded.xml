<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/MAIN_WHITE">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_margin="4dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_noti_small_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_icon_notification" />

        <TextView
            android:id="@+id/tv_noti_title"
            style="@style/kor_H4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SOPO"
            android:textColor="#5D96FF"
            android:layout_margin="8dp"
            android:layout_toRightOf="@+id/iv_noti_small_icon"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_noti_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_noti_title"
            android:layout_centerVertical="true"
            android:textColor="#383838"
            android:includeFontPadding="false"
            tools:text="오후 01:13"/>

        <ImageView
            android:id="@+id/iv_expandable_arrow"
            android:layout_width="10dp"
            android:layout_height="6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tv_noti_time"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_toRightOf="@+id/tv_noti_time"
            android:layout_marginLeft="16dp"
            android:background="@drawable/ic_expandable_arrow_blue"
            android:rotation="180"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <TextView
        style="@style/kor_H3"
        android:id="@+id/tv_main_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_medium"
        android:textColor="#212121"
        android:layout_marginLeft="12dp"
        tools:text="한진택배 / 123412341234"/>

    <TextView
        style="@style/kor_H4"
        android:id="@+id/tv_sub_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_medium"
        android:text="123123123123"
        android:textColor="#4d4d4d"
        android:layout_marginLeft="12dp"/>

</LinearLayout>
