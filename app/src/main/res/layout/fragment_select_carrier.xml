<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.delivery.sopo.R" />
        <variable
            name="vm"
            type="com.delivery.sopo.presentation.viewmodels.registesrs.SelectCarrierViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_main_select_carrier"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/COLOR_GRAY_50">

        <include
            android:id="@+id/include_header"
            layout="@layout/include_header_left_title_with_right_button"
            app:title='@{"배송사 선택"}'
            app:rightEventIcon="@{R.drawable.ic_clear_btn}"
            app:onRightClickListener="@{()->vm.onClearClicked()}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/recycler_carriers" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_carriers"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="40dp"
            android:paddingBottom="130dp"
            app:layout_constrainedHeight="true"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            tools:itemCount="9"
            tools:gridSpan="3"
            tools:listitem="@layout/item_img"
            app:layout_constraintTop_toBottomOf="@id/include_header" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
