<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_main_select_carrier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/constraint_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:background="@drawable/ic_squirecle_stroke_blue"
            app:layout_constraintBottom_toTopOf="@id/tvCarrier"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"
            />

        <ImageView
            android:id="@+id/ivCarrier"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:adjustViewBounds="true"
            android:background='@drawable/ic_thumbnail_cj'
            android:gravity="center"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="@id/constraint_image"
            app:layout_constraintBottom_toBottomOf="@id/constraint_image"
            app:layout_constraintLeft_toLeftOf="@id/constraint_image"
            app:layout_constraintRight_toRightOf="@id/constraint_image"
            />

        <ImageView
            android:id="@+id/ivNotSelectableBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_not_selectable_badge"
            app:layout_constraintEnd_toEndOf="@id/constraint_image"
            app:layout_constraintTop_toTopOf="@id/constraint_image" />

<!--        <androidx.constraintlayout.widget.ConstraintLayout-->
<!--            android:id="@+id/constraint_image"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            tools:background="@drawable/ic_squircle"-->
<!--            tools:backgroundTint="@color/COLOR_GRAY_100"-->
<!--            app:layout_constraintBottom_toTopOf="@id/tvCarrier"-->
<!--            app:layout_constraintLeft_toLeftOf="parent"-->
<!--            app:layout_constraintRight_toRightOf="parent"-->
<!--            app:layout_constraintTop_toTopOf="parent"-->
<!--            android:layout_marginTop="24dp">-->

<!--            -->

<!--        </androidx.constraintlayout.widget.ConstraintLayout>-->

        <TextView
            android:id="@+id/tvCarrier"
            style="@style/kor_H4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/constraint_image"
            tools:text="롯데택배" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
