<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_all_rounded"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24sp"
            android:layout_marginTop="34sp">

            <TextView
                android:id="@+id/tv_title"
                style="@style/H2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqa_han_sans_neo_regular"
                android:gravity="start"
                android:includeFontPadding="false"
                android:text="쾌적한 앱 사용을 위해\n설정해주세요."
                android:textColor="@color/COLOR_GRAY_800" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_permission_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24sp"
            android:layout_marginVertical="32sp"
            android:orientation="vertical">

            <include
                android:id="@+id/include_permission_1st"
                layout="@layout/detail_permission_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="36sp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/buttonHalfStyle"
                android:id="@+id/btn_ok"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:background="@drawable/border_all_round_15dp"
                android:backgroundTint="@color/COLOR_MAIN_700"
                android:gravity="center"
                android:paddingVertical="10sp"
                android:text="확인"
                android:textColor="@color/MAIN_WHITE"
                android:textSize="20dp"
                android:textStyle="bold"/>


        </LinearLayout>

    </LinearLayout>

</layout>

