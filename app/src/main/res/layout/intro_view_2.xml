<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/COLOR_MAIN_BLUE_50">

    <TextView
        android:id="@+id/tv_maintext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35sp"
        android:fontFamily="@font/spoqa_han_sans_regular"
        android:text="한눈에 알아보기 쉽게!"
        android:textColor="@color/COLOR_MAIN_BLUE_700"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_subtext"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_subtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="35sp"
        android:fontFamily="@font/spoqa_han_sans_regular"
        android:text="\n앱에서 한눈에 알아보기 쉽게 택배 조회를 해보세요.\n앱을 안보고 계시더라도 푸시 알림으로 확인이 가능합니다."
        android:textColor="@color/COLOR_GRAY_800"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>