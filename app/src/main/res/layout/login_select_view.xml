<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.delivery.sopo.R" />

        <import type="androidx.core.content.ContextCompat" />

        <variable
            name="vm"
            type="com.delivery.sopo.presentation.viewmodels.login.LoginSelectViewModel" />
    </data>

    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        android:id="@+id/slide_main_login_select"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/COLOR_GRAY_50"
        android:gravity="bottom"
        app:umanoDragView="@+id/layout_drawer"
        app:umanoOverlay="true"
        app:umanoPanelHeight="0dp"
        app:umanoShadowHeight="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_main_login_select"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/COLOR_GRAY_50">

            <!-- TODO 사이즈 강제로 변경 진행 -->
            <ImageView
                android:layout_width="401dp"
                android:layout_height="397dp"
                android:adjustViewBounds="true"
                app:layout_constraintBottom_toTopOf="@+id/linear_btn_part"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:setImage="@{R.drawable.login_select_view_image}"
                app:setDefaultImage="@{0}"
                tools:background="@drawable/login_select_view_image" />

            <LinearLayout
                android:id="@+id/linear_btn_part"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:background="@color/COLOR_GRAY_50"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/relative_email_login"
                    style="@style/buttonTranStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="41dp"
                    android:layout_marginEnd="41dp"
                    android:gravity="center"
                    android:onClick="@{()->vm.onLoginClicked()}"
                    android:text="이메일로 로그인"
                    android:textColor="@color/COLOR_MAIN_700" />

                <TextView
                    android:id="@+id/layout_kakao_login"
                    style="@style/buttonTranStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="41dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="41dp"
                    android:gravity="center"
                    android:onClick="@{()->vm.onKakaoLoginClicked()}"
                    android:text="kakao로 로그인"
                    android:textColor="@color/COLOR_MAIN_700" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="41dp"
                        android:layout_marginEnd="41dp"
                        android:background="@color/COLOR_GRAY_200" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@color/COLOR_GRAY_50"
                        android:padding="5sp"
                        android:text="@string/LOGIN_SELECT_OR_COMMENT"
                        android:textColor="@color/COLOR_GRAY_400"
                        android:textSize="12sp" />
                </RelativeLayout>


                <TextView
                    android:id="@+id/btn_next"
                    style="@style/buttonBasicStyle"
                    android:textSize="15dp"
                    android:fontFamily="@font/pretendard_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="41dp"
                    android:layout_marginEnd="41dp"
                    android:onClick="@{()->vm.onSignUpClicked()}"
                    android:text="@string/LOGIN_SELECT_JOIN_COMMENT" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/layout_drawer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_top_rounded"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                style="@style/kor_H3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="34dp"
                android:lineHeight="24dp"
                android:layout_marginBottom="26.5dp"
                android:fontFamily="@font/pretendard_bold"
                android:includeFontPadding="false"
                android:text="택배 정보를 기록하기 위해\n권한이 필요합니다"
                android:textColor="@color/COLOR_GRAY_800" />

            <include
                android:id="@+id/include_permission_save"
                layout="@layout/detail_permission_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginBottom="36dp"
                app:content='@{"고객님의 계정 및 택배 정보를 기록합니다."}'
                app:permissionIcon="@{R.drawable.ic_permission_save}"
                app:title='@{"저장 권한"}' />

            <TextView
                android:id="@+id/tv_permission_check"
                style="@style/buttonHalfStyle"
                android:layout_width="135dp"
                android:layout_height="43dp"
                android:layout_gravity="center"
                android:layout_marginBottom="25dp"
                android:fontFamily="@font/pretendard_bold"
                android:background="@drawable/border_all_round_14dp"
                android:backgroundTint="@color/COLOR_MAIN_700"
                android:gravity="center"
                android:text="확인"
                android:textColor="@color/MAIN_WHITE"
                android:textSize="15dp"
                />

        </LinearLayout>
    </com.sothree.slidinguppanel.SlidingUpPanelLayout>
</layout>