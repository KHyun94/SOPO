<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_all_rounded"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25sp"
        android:layout_marginTop="35sp"
        android:layout_marginBottom="30sp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="쾌적한 앱 사용을 위해\n설정해주세요."
            android:fontFamily="@font/spoqa_han_sans_regular"
            android:textColor="@color/COLOR_GRAY_800"
            android:textSize="21sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_permission_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="25sp">
        <include
            android:id="@+id/include_permission_1st"
            layout="@layout/detail_permission_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginVertical="10sp" />

        <include

            android:id="@+id/include_permission_2nd"
            layout="@layout/detail_permission_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:background="@drawable/border_round_white_btn"
            android:backgroundTint="@color/COLOR_MAIN_BLUE_700"
            android:gravity="center"
            android:padding="20sp"
            android:text="확인"
            android:textColor="@color/MAIN_WHITE"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
