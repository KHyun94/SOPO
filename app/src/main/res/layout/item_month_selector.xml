<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.delivery.sopo.R"/>
        <import type="androidx.core.content.ContextCompat" />

        <variable
            name="month"
            type="String" />

        <variable
            name="textColor"
            type="int" />

        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="isValue"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_month_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:padding="12dp"
        android:onClick="@{clickListener}">

        <TextView
            style="@style/kor_H4"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@{isValue?R.drawable.oval_24dp_gray_scale:0}"
            android:gravity="center"
            android:text="@{month}"
            android:textColor="@{ContextCompat.getColor(context, textColor)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="@{0}"
            tools:text="1"
            tools:textColor="@color/COLOR_GRAY_300"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
