<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <import type="com.delivery.sopo.consts.InfoConst" />
        <import type="com.delivery.sopo.models.CourierType" />

        <variable
            name="vm"
            type="com.delivery.sopo.viewmodels.registesrs.RegisterViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25sp"
            android:text="운송장 등록"
            android:textColor="@color/MAIN_BLACK"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.9" />

        <com.delivery.sopo.util.ui_util.CustomEditText
            android:id="@+id/custom_et_track_num"
            content="@={vm.trackNumStr}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25sp"
            android:layout_marginTop="25sp"
            app:customFocusChangeListener="@{vm.callback}"
            app:hint="운송장 번호를 입력해주세요."
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:title="운송장 번호"
            app:type="@{InfoConst.REGISTER_TRACK_NUM}" />

        <LinearLayout
            android:id="@+id/custom_et_delivery_co"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25sp"
            android:minHeight="80sp"
            android:orientation="vertical"
            android:paddingVertical="10sp"
            app:layout_constraintTop_toBottomOf="@id/custom_et_track_num">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:paddingHorizontal="10sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5sp"
                    android:paddingBottom="5sp"
                    android:text="택배사"
                    android:textColor="@color/MAIN_BLACK"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="parent" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="@{()->vm.onMoveStep2Clicked()}"
                android:paddingHorizontal="10sp">

                <ImageView
                    android:id="@+id/iv_courier"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginRight="6dp"
                    android:visibility="@{(vm.courier.name.length() > 0)?View.VISIBLE:View.GONE}"
                    app:setImage="@{vm.courier.clickRes}"/>

                <TextView
                    android:id="@+id/et_input_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/iv_courier"
                    android:background="@null"
                    android:hint="클릭하여 배송사를 선택해주세요."
                    android:lines="1"
                    android:singleLine="true"
                    android:text="@{vm.courier.name}"
                    android:textColorHint="@color/COLOR_GRAY_300"
                    android:textSize="20sp"
                    android:paddingBottom="7sp"/>

                <View
                    android:id="@+id/v_underline"
                    android:layout_width="match_parent"
                    android:layout_height="2sp"
                    android:layout_below="@+id/et_input_text"
                    android:background="@{vm.courier.name.length() > 0 ? @color/MAIN_BLACK : @color/COLOR_GRAY_200}" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/IS_RIGHT_COURIER"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/COLOR_MAIN_RED_700"
            android:visibility="@{vm.courier.name.length() > 0 ? View.VISIBLE : View.GONE}"
            app:layout_constraintTop_toBottomOf="@id/custom_et_delivery_co"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintLeft_toRightOf="parent"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_marginHorizontal="25sp"
            android:layout_marginTop="53sp"
            android:background="@drawable/border_all_rounded"
            android:backgroundTint="@color/COLOR_GRAY_100"
            android:gravity="center"
            android:onClick="@{()->vm.onPasteClicked()}"
            android:orientation="horizontal"
            android:visibility="@{(vm.clipboardStr.length() > 0) &amp;&amp; (vm.courier.name.length() == 0)?View.VISIBLE:View.GONE}"
            app:layout_constraintTop_toBottomOf="@id/custom_et_delivery_co">

            <TextView
                android:id="@+id/tv_clipboard_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqa_han_sans_regular"
                android:text="@={vm.clipboardStr}"
                android:textColor="@color/COLOR_MAIN_BLUE_700"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqa_han_sans_regular"
                android:text="로 등록하기"
                android:textColor="@color/COLOR_MAIN_BLUE_700"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43sp"
            android:layout_marginHorizontal="36sp"
            android:layout_marginTop="69sp"
            android:background="@drawable/border_all_rounded"
            android:backgroundTint="@color/COLOR_MAIN_BLUE_700"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="@{(vm.trackNumStr.length() > 0) &amp;&amp; (vm.courier.name.length() > 0)?View.VISIBLE:View.GONE}"
            app:layout_constraintTop_toBottomOf="@id/custom_et_delivery_co">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqa_han_sans_regular"
                android:text="다음으로"
                android:textColor="@color/MAIN_WHITE"
                android:textSize="14sp" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
