<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="onItemClickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="onChangeClickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="onConfirmClickListener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:id="@+id/layout_drawer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_top_rounded"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_time_title"
            style="@style/kor_H3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:text="앱을 켤 때마다 잠금번호를 입력합니다." />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_main_set_on"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:onClick="@{onItemClickListener}">

            <TextView
                android:id="@+id/tv_set_on"
                style="@style/kor_H4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:text="설정 켜기"
                android:textColor="@color/COLOR_GRAY_500"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/iv_set_on"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_set_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:background="@drawable/ic_checked_blue_scale"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/v_divider_line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/COLOR_GRAY_100" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_main_set_off"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:onClick="@{onItemClickListener}">

            <TextView
                android:id="@+id/tv_set_off"
                style="@style/kor_H4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:text="설정 끄기"
                android:textColor="@color/COLOR_GRAY_500"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/iv_set_off"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_set_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:background="@drawable/ic_checked_blue_scale"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/tv_lock_password_change"
                style="@style/buttonHalfStyle"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/border_15dp_blue_rounder"
                android:gravity="center"
                android:onClick="@{onChangeClickListener}"
                android:text="잠금번호 변경"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tv_ok"
                app:layout_constraintTop_toTopOf="parent"
                tools:backgroundTint="@color/COLOR_GRAY_200"
                tools:textColor="@color/COLOR_GRAY_400" />

            <TextView
                android:id="@+id/tv_ok"
                style="@style/buttonHalfStyle"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="28dp"
                android:gravity="center"
                android:minWidth="144dp"
                android:onClick="@{onConfirmClickListener}"
                android:text="확인"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/tv_lock_password_change"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</layout>