<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="com.delivery.sopo.consts.InfoConst" />

        <import type="com.delivery.sopo.models.Carrier" />

        <import type="androidx.core.content.ContextCompat" />

        <import type="com.delivery.sopo.R" />

        <variable
            name="vm"
            type="com.delivery.sopo.presentation.viewmodels.registesrs.ConfirmParcelViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_main_confirm_parcel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/COLOR_GRAY_50">

        <include
            android:id="@+id/include_header"
            layout="@layout/include_header_left_title_with_right_button"
            app:layout_constraintTop_toTopOf="parent"
            app:title='@{"운송장 등록"}' />

        <EditText
            android:id="@+id/et_input_text"
            style="@style/kor_H1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="17dp"
            android:layout_marginRight="24dp"
            android:background="@null"
            android:fontFamily="@font/pretendard_medium"
            android:hint="물품명"
            android:maxLength="15"
            android:maxLines="1"
            android:singleLine="true"
            android:text="@={vm.alias}"
            android:textColorHint="#E6E6E6"
            android:textCursorDrawable="@drawable/cursor_3dp_gray_800"
            android:textSize="24dp"
            app:layout_constraintTop_toBottomOf="@id/include_header"
            tools:text="난난난난난난난난난난난난난난난난난난난난난난난난난" />

        <ImageView
            android:id="@+id/iv_carrier"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="8dp"
            android:padding="5dp"
            android:src='@{ContextCompat.getDrawable(context, vm.carrier.icons[0])}'
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/linear_carrier_info"
            app:layout_constraintTop_toBottomOf="@id/et_input_text"
            tools:src="@drawable/ic_confirm_hanjin" />

        <LinearLayout
            android:id="@+id/linear_carrier_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_toEndOf="@+id/iv_carrier"
            android:orientation="vertical"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="@id/iv_carrier"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toRightOf="@+id/iv_carrier"
            app:layout_constraintRight_toLeftOf="@+id/iv_revise"
            app:layout_constraintTop_toTopOf="@id/iv_carrier">

            <TextView
                android:id="@+id/tv_carrier"
                style="@style/kor_H5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:includeFontPadding="false"
                android:text="@{vm.carrier.carrier.NAME}"
                android:textColor="@color/COLOR_GRAY_400"
                tools:text="대한통운" />

            <TextView
                android:id="@+id/tv_waybill_num"
                style="@style/kor_H3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:fontFamily="@font/pretendard_semi_bold"
                android:includeFontPadding="false"
                android:letterSpacing="0"
                android:maxLines="1"
                android:text="@{vm.waybillNum}"
                android:textColor="@color/COLOR_GRAY_400"
                tools:text="123456789123456789123123456789123456789123123456789123456789123" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_revise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"
            android:onClick="@{() -> vm.onMoveClicked(ivRevise)}"
            android:src="@drawable/ic_revise_bttn"
            app:layout_constraintBottom_toBottomOf="@id/iv_carrier"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_carrier" />

        <LinearLayout
            android:id="@+id/linear_init"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{()->vm.onMoveClicked(tvInit)}"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/tv_register"
            android:layout_marginBottom="22dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:background="@drawable/ic_retry_blue_scale" />

            <TextView
                android:id="@+id/tv_init"
                style="@style/kor_H4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqa_han_sans_neo_regular"
                android:text="처음부터 다시 하기"
                android:textColor="@color/COLOR_MAIN_700" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_register"
            style="@style/buttonBasicStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="32dp"
            android:letterSpacing="0"
            android:onClick="@{()->vm.onMoveClicked(tvRegister)}"
            android:text="등록하기"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="36dp"
            app:lottie_rawRes="@raw/lottie_register_progress_bar" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>