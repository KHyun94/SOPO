<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.delivery.sopo.viewmodels.menus.NoticeViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/constraint_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/COLOR_GRAY_50"
        android:orientation="vertical">

        <View
            android:id="@+id/view_divisionLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#40000000"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@+id/topMenuBar" />


        <ExpandableListView
            android:id="@+id/expandablelist_notice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layoutDirection="rtl" />

    </LinearLayout>
</layout>