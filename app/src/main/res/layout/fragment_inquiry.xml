<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="com.delivery.sopo.R" />

        <import type="com.delivery.sopo.enums.InquiryStatusEnum" />

        <variable
            name="vm"
            type="com.delivery.sopo.viewmodels.inquiry.InquiryViewModel" />

        <variable
            name="screenStatus"
            type="com.delivery.sopo.enums.InquiryStatusEnum" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_main_inquiry"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/COLOR_GRAY_50">

        <include
            android:id="@+id/include_header"
            layout="@layout/include_header_left_title_with_right_button"
            app:leftEventIcon="@{vm.isAvailableRefresh()?R.drawable.ic_bttn_update_active:R.drawable.ic_bttn_update_inactive}"
            app:onLeftEventClickListener="@{()->vm.onRefreshParcelsClicked()}"
            app:rightEventIcon="@{R.drawable.ic_24_meatball}"
            app:title='@{"택배 조회"}' />


        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout_inquiry_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_marginHorizontal="60dp"
            android:background="@color/COLOR_GRAY_50"
            app:layout_constraintTop_toBottomOf="@+id/include_header"
            app:tabBackground="@drawable/selector_tab_indicator_gray_scale"
            app:tabIndicatorColor="@color/COLOR_GRAY_700"
            app:tabIndicatorHeight="3dp"
            app:tabRippleColor="@null" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_pager_inquiry_type"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tab_layout_inquiry_type" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>