<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="androidx.core.content.ContextCompat" />
        <import type="com.delivery.sopo.R"/>
        <variable
            name="permissionIcon"
            type="int" />

        <variable
            name="title"
            type="String" />

        <variable
            name="content"
            type="String" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/MAIN_WHITE"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@{ContextCompat.getDrawable(context, permissionIcon)}"
                tools:background="@drawable/ic_permission_save" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/kor_H5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{title}"
                tools:text="저장 권한"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/pretendard_bold"
                android:textColor="@color/COLOR_GRAY_800" />


            <TextView
                style="@style/kor_H5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{content}"
                tools:text="수신한 문자에서 택배 정보를\n자동으로 등록합니다."
                android:textColor="@color/COLOR_GRAY_500" />

        </LinearLayout>

    </LinearLayout>
</layout>
