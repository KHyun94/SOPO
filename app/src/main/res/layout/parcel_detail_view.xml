<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="com.delivery.sopo.R" />

        <variable
            name="vm"
            type="com.delivery.sopo.viewmodels.inquiry.ParcelDetailViewModel" />
    </data>

    <RelativeLayout
        android:id="@+id/relative_main_inquiry_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/COLOR_GRAY_50">

        <com.sothree.slidinguppanel.SlidingUpPanelLayout
            android:id="@+id/layout_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/COLOR_GRAY_50"
            android:gravity="bottom"
            app:umanoDragView="@+id/layout_drawer"
            app:umanoOverlay="true"
            app:umanoShadowHeight="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/COLOR_GRAY_50"
                android:focusableInTouchMode="false">

                <include
                    android:id="@+id/include_header"
                    layout="@layout/include_header_center_title_with_left_button"
                    app:buttonIcon="@{R.drawable.ic_left_arrow}"
                    app:onEventClickListener="@{()->vm.onBackClicked()}"
                    app:title='@{"상세 조회"}' />

                <LinearLayout
                    android:id="@+id/layout_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toTopOf="@+id/layout_tail"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/include_header">

                    <TextView
                        android:id="@+id/tv_subtext"
                        style="@style/kor_H3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_medium"
                        android:includeFontPadding="false"
                        android:text="@{vm.deliveryStatus.MSG}"
                        android:textColor="@color/COLOR_GRAY_400"
                        android:visibility="@{vm.deliveryStatus != null ? View.VISIBLE:View.GONE}" />


                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/iv_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:setDeliveryStatusInLottie="@{vm.deliveryStatus}"
                        tools:setDeliveryStatusInLottie="@raw/inquiry_2depth_out_for_delivery.json" />

                </LinearLayout>

                <!--<TextView
                    android:id="@+id/tv_subtext"
                    style="@style/kor_H3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="39dp"
