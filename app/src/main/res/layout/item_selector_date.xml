<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="mode"
            type="int" />

        <variable
            name="selector"
            type="com.delivery.sopo.DateSelector" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvCompletedParcelMonth"
            style="@style/kor_H4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26.81dp"
            android:text='@{selector.cursorDate}'
            android:textColor="@color/COLOR_GRAY_700"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="2022년5월" />

        <ImageView
            android:id="@+id/ivPreviousArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="22dp"
            android:src="@drawable/ic_previous_thin_arrow_white_24"
            android:visibility='@{selector.hasPrevious &amp;&amp; mode == 0 ? View.VISIBLE : View.GONE}'
            app:layout_constraintBottom_toBottomOf="@id/tvCompletedParcelMonth"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tvCompletedParcelMonth"
            app:layout_constraintTop_toTopOf="@id/tvCompletedParcelMonth"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/ivNextArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:src="@drawable/ic_next_thin_arrow_white_24"
            android:visibility='@{selector.hasNext &amp;&amp; mode == 0 ? View.VISIBLE : View.GONE}'
            app:layout_constraintBottom_toBottomOf="@id/tvCompletedParcelMonth"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toRightOf="@id/tvCompletedParcelMonth"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvCompletedParcelMonth" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

