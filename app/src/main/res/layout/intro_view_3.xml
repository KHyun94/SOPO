<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/COLOR_GRAY_50">

    <View
        android:id="@+id/guide_1st"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@id/v_empty"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_bold"
        android:gravity="center"
        android:includeFontPadding="false"
        android:letterSpacing="-0.03"
        android:lineHeight="32dp"
        android:text="다음 화면에서\n권한을 허용해주세요."
        android:textColor="@color/COLOR_GRAY_900"
        android:textSize="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guide_1st"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/tv_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="91dp"
        android:fontFamily="@font/pretendard_medium"
        android:letterSpacing="-0.03"
        android:text="신규 택배를 대신 등록해드릴게요."
        android:textColor="@color/COLOR_GRAY_600"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/v_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        app:lottie_colorFilter="@color/COLOR_GRAY_50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:lottie_rawRes="@raw/lottie_intro_step2" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="130dp"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toTopOf="@id/tv_setting_now"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/lottie_intro_step3"
        tools:lottie_rawRes="@raw/lottie_intro_step3" />

    <TextView
        android:id="@+id/tv_setting_now"
        style="@style/buttonBasicStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/pretendard_bold"
        android:text="지금 설정할게요"
        android:textSize="15dp"
        android:letterSpacing="0"
        app:layout_constraintBottom_toTopOf="@id/tv_setting_later"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_setting_later"
        style="@style/buttonTranStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="36dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/pretendard_bold"
        android:gravity="center"
        android:letterSpacing="0"
        android:text="나중에 할게요"
        android:textColor="@color/COLOR_MAIN_700"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>