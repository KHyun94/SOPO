<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="PopupMenuListView" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">@color/COLOR_GRAY_100</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- status bar 색상 바꿔야함 -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/COLOR_GRAY_50</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:dropDownListViewStyle">@style/PopupMenuListView</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="snackbarStyle">@style/Widget.MaterialComponents.Snackbar.FullWidth</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_gradient_linear</item>
    </style>

    <style name="SopoRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorAccent">@color/COLOR_MAIN_700</item>
        <item name="android:textColorPrimaryDisableOnly">@color/MAIN_BLACK</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>

    <style name="TextLabel" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="android:textColorHint">@color/MAIN_BLACK</item>
        <item name="colorAccent">@color/MAIN_BLACK</item>
        <item name="colorControlNormal">@color/MAIN_BLACK</item>
        <item name="colorControlActivated">@color/MAIN_BLACK</item>
        <item name="colorError">@color/colorAccent</item>
    </style>

    <style name="buttonBasicStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:background">@drawable/border_all_round_15dp</item>
        <item name="android:backgroundTint">@color/COLOR_MAIN_700</item>
        <item name="android:textColor">@color/MAIN_WHITE</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">14dp</item>
        <item name="android:letterSpacing">-0.04</item>
    </style>

    <style name="buttonTranStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:background">@drawable/border_all_round_15dp</item>
        <item name="android:textColor">@color/MAIN_WHITE</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">14dp</item>
        <item name="android:letterSpacing">-0.04</item>
    </style>

    <style name="buttonHalfStyle" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/border_all_round_15dp</item>
        <item name="android:backgroundTint">@color/COLOR_MAIN_700</item>
        <item name="android:textColor">@color/MAIN_WHITE</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">14dp</item>
        <item name="android:letterSpacing">-0.04</item>
    </style>

    <style name="outLinedTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorControlActivated">@color/COLOR_MAIN_700</item>
        <item name="boxStrokeColor">@color/COLOR_MAIN_700</item>
    </style>

    <style name="tab_inquiry_type" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">16dp</item>
    </style>



    <style name="InquiryTypeLabel" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/border_10dp_rounder</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">12dp</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">9dp</item>
        <item name="android:letterSpacing">-0.05</item>
    </style>
</resources>
