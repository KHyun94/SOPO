<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/COLOR_MAIN_BLUE_50">

    <TextView
        android:id="@+id/tv_maintext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="눈 깜짝할 사이에\n운송장을 등록하세요!"
        android:textSize="21sp"
        android:fontFamily="@font/spoqa_han_sans_regular"
        android:textColor="@color/COLOR_MAIN_BLUE_700"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_subtext"
        android:layout_marginStart="35sp" />

    <TextView
        android:id="@+id/tv_subtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="\n카카오톡 메세지, 문자 메시지에서 운송장을\n빠르게 입력해 내 택배를 추적해보세요."
        android:textSize="12sp"
        android:textColor="@color/COLOR_GRAY_800"
        android:fontFamily="@font/spoqa_han_sans_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="35sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>