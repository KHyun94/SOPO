<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.delivery.sopo.enums.LockScreenStatusEnum" />

        <import type="android.view.View" />

        <import type="androidx.core.content.ContextCompat" />

        <import type="com.delivery.sopo.R" />

        <variable
            name="vm"
            type="com.delivery.sopo.viewmodels.menus.LockScreenViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_main_lock_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/COLOR_GRAY_50">

        <include
            android:id="@+id/include_header"
            layout="@layout/include_header_center_title_with_right_button"
            app:title='@{vm.title}'
            app:buttonIcon="@{R.drawable.ic_clear_btn}"
            app:onEventClickListener="@{()->vm.onBackClicked()}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



        <TextView
            android:id="@+id/tv_errorComment"
            style="@style/kor_H5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/LOCK_SCREEN_VIEW_INVALID_PASSWORD"
            android:textColor="@color/MAIN_RED"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/tv_guide_comment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_guide_comment"
            style="@style/kor_H5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="113dp"
            android:text="@string/LOCK_SCREEN_VIEW_PLEASE_INPUT_PASSWORD"
            android:textColor="@color/COLOR_GRAY_600"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include_header" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_guide_comment">

            <EditText
                android:id="@+id/et_firstPassword"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:background="@drawable/ic_lock_edittext_off"
                android:enabled="false"
                android:gravity="center" />

            <EditText
                android:id="@+id/et_secondPassword"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:background="@drawable/ic_lock_edittext_off"
                android:enabled="false" />

            <EditText
                android:id="@+id/et_thirdPassword"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:background="@drawable/ic_lock_edittext_off"
                android:enabled="false" />

            <EditText
                android:id="@+id/et_fourthPassword"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/ic_lock_edittext_off"
                android:enabled="false" />
        </LinearLayout>

        <GridLayout
            android:id="@+id/grid_numPad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:columnCount="1"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/btn_1"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/ripple_circle"
                        android:fontFamily="@font/pretendard_bold"
                        android:gravity="center"
                        android:onClick="@{() -> vm.onPressLockKeyPadClicked(1)}"
                        android:text="1"
                        android:textColor="@color/COLOR_GRAY_800"
                        android:textSize="20dp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/btn_2"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/ripple_circle"
                        android:fontFamily="@font/pretendard_bold"
                        android:gravity="center"
                        android:onClick="@{() -> vm.onPressLockKeyPadClicked(2)}"
                        android:text="2"
                        android:textColor="@color/COLOR_GRAY_800"
                        android:textSize="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/btn_3"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/ripple_circle"
                        android:fontFamily="@font/pretendard_bold"
                        android:gravity="center"
                        android:onClick="@{() -> vm.onPressLockKeyPadClicked(3)}"
                        android:text="3"
                        android:textColor="@color/COLOR_GRAY_800"
                        android:textSize="20dp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/btn_4"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/ripple_circle"
                        android:fontFamily="@font/pretendard_bold"
                        android:gravity="center"
                        android:onClick="@{() -> vm.onPressLockKeyPadClicked(4)}"
                        android:text="4"
                        android:textColor="@color/COLOR_GRAY_800"
                        android:textSize="20dp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/btn_5"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/ripple_circle"
                        android:fontFamily="@font/pretendard_bold"
                        android:gravity="center"
                        android:onClick="@{() -> vm.onPressLockKeyPadClicked(5)}"
                        android:text="5"
                        android:textColor="@color/COLOR_GRAY_800"
                        android:textSize="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/btn_6"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/ripple_circle"
                        android:fontFamily="@font/pretendard_bold"
                        android:gravity="center"
                        android:onClick="@{() -> vm.onPressLockKeyPadClicked(6)}"
                        android:text="6"
                        android:textColor="@color/COLOR_GRAY_800"
                        android:textSize="20dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/btn_7"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/ripple_circle"
                        android:fontFamily="@font/pretendard_bold"
                        android:gravity="center"
                        android:onClick="@{() -> vm.onPressLockKeyPadClicked(7)}"
                        android:text="7"
                        android:textColor="@color/COLOR_GRAY_800"
                        android:textSize="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/btn_8"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/ripple_circle"
                        android:fontFamily="@font/pretendard_bold"
                        android:gravity="center"
                        android:onClick="@{() -> vm.onPressLockKeyPadClicked(8)}"
                        android:text="8"
                        android:textColor="@color/COLOR_GRAY_800"
                        android:textSize="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/btn_9"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/ripple_circle"
                        android:fontFamily="@font/pretendard_bold"
                        android:gravity="center"
                        android:onClick="@{() -> vm.onPressLockKeyPadClicked(9)}"
                        android:text="9"
                        android:textColor="@color/COLOR_GRAY_800"
                        android:textSize="20dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/pretendard_bold"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/COLOR_GRAY_800"
                    android:textSize="20dp"
                    android:visibility="invisible" />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/btn_0"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/ripple_circle"
                        android:fontFamily="@font/pretendard_bold"
                        android:gravity="center"
                        android:onClick="@{() -> vm.onPressLockKeyPadClicked(0)}"
                        android:text="0"
                        android:textColor="@color/COLOR_GRAY_800"
                        android:textSize="20dp" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="24dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_erase_btn"
                        android:background="@drawable/ripple_circle"
                        android:onClick="@{()->vm.eraseLockPassword()}"
                        />
                </RelativeLayout>
            </LinearLayout>
        </GridLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>